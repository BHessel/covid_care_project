<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
    <% end %>
<% end %>

<div>
    <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.submit%>
    <% end %>
</div>
